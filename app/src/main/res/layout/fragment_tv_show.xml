<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.TvShowFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

    <SearchView
        android:id="@+id/et_Search1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_tv_border_black"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="@string/search"
        android:inputType="textAutoComplete"
        android:letterSpacing="0.1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/base_dark"
        android:textColorHint="@color/base_dark"
        tools:ignore="Autofill" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tv_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            tools:listitem="@layout/item_movie" />

    </LinearLayout>
</FrameLayout>